          <li>
            <a href="static_page/about_us"> About Us</a>
          </li>
          <li>
            <a href="static_page/contact" >Contact</a>
          </li>
        </ul>
      </nav>
      </header>
   </div>
   <div style="background-color: #f5f5f5">
      <div align="center">
        <%= image_tag("template_articles_logo.png", :width => 550, :height => 200, :padding => 3,  :crop => :scale, :radius => 10) %>
      </div>

     <% @posts.each do |post| %>
        <article>

          <header style="text-align: left; color:#5FB8DD">

              <span>
                    </br>
                    <%= image_tag("template_heart.png", :width => 30, :height => 30,:crop => :scale, :radius => 10) %>
              </span>
              <span>
                <h4><%= link_to post.title, post%> </h4>
                    <p class="meta">
                      <time datetime="2012-05-08T12:33:00+00:00" pubdate data-updated="true"> <%= post.updated_at %></time>
                    </p>
              </span>
          </header>

          <div class="entry-content"><p><%= post.short_content %>  <%= link_to 'more ...', post,{:style => 'color: #CA6B25;'} %></p>

            <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://127.0.0.1:3000/posts/1">Tweet</a>
